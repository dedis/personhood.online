<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      navigatingTo="navigatingTo"
      class="page">
    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="Manage Identity"></Label>
    </ActionBar>
    <GridLayout rows="*, auto, *, auto, *" columns="auto, *" margin="2%" backgroundColor="#eeeeee">

        <StackLayout padding="10%" row="0" colSpan="3" style="vertical-align: top;">
            <Label text="Here you can connect to other users to send coins to them. You can also start participating in a personhood party."
                   class="h2" textWrap="true" height="100%"/>
        </StackLayout>

        <Label backgroundColor="#ffffff" row="1" colSpan="2" height="3%"/>

        <Label text="&#xf0c0;" fontSize="100%" class="fas"
               row="2" col="0" style="vertical-align: center;" tap="goPosts"/>
        <StackLayout padding="10%" row="2" col="2" style="vertical-align: center;" tap="goFriends">
            <Label text="Friends" class="h1" textWrap="true"
                   textTransform="uppercase"/>
            <Label text="Total Friends" textWrap="true" fontSize="15%"/>
        </StackLayout>

        <Label backgroundColor="#ffffff" row="3" colSpan="2" height="3%"/>

        <Label text="&#xf2c1;" fontSize="100%" class="fas"
               row="4" col="0" style="vertical-align: center; horizontal-align: center" tap="goPersonhood"/>
        <StackLayout padding="10%" row="4" col="1" style="vertical-align: center;" tap="goPersonhood">
            <Label text="Personhood" class="h1" textWrap="true"
                   textTransform="uppercase"/>
            <Label text="Total Badges" textWrap="true" fontSize="15%"/>
        </StackLayout>
    </GridLayout>
</Page>
