<!--
Here the user can enter his alias
-->
<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="Registration"></Label>
    </ActionBar>
    <StackLayout class="p-20">
        <Label text="Activate your identity" class="h1 text-center"
               textWrap="true"/>
        <Label text="Get this QRCode scanned by somebody who has a personhood-badge"
               class="h3"
               textWrap="true"/>
        <Image src="{{ qrcode }}"
               visibility="visible"
               width="30%"/>
        <Label text="Once your identity got activated, verify it:" class="h3 text-center"
               textWrap="true"/>
        <Button text="Verify activation" tap="verifyActivation" class="btn btn-primary"/>
        <Button text="Delete all" tap="deleteAll" class="btn btn-primary btn-test"/>
        <!--<Label text="Or chose another activation method:" class="h3 text-center"-->
        <!--textWrap="true"/>-->
        <Button text="Visit a personhood-party" tap="activateParty" class="btn btn-primary"/>
        <Button text="Login through EPFL" tap="activateEPFL" class="btn btn-primary btn-stub"/>
        <!--<Button text="Use email" tap="activateEmail" class="btn btn-primary btn-stub"/>-->
        <Button text="Pay for account" tap="activateParty" class="btn btn-primary btn-stub"/>
    </StackLayout>
</Page>
