        <Label text="Chose one of the following activation methods:" class="h1 text-center"/>
        <Button text="Receive personhood-coins" tap="activatePersonhood" class="btn btn-primary btn-active"/>
        <Button text="Visit a personhood-party" tap="activateParty" class="btn btn-primary btn-active"/>
