<!--
Here the user can enter his alias
-->
<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      navigatingTo="navigatingTo"
      xmlns:df="nativescript-ui-dataform"
      class="page">
    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="Setting Alias"></Label>
    </ActionBar>
    <StackLayout class="p-20">
        <Label text="Setting your identity" class="h1 text-center" textWrap="true"/>
        <Label text="Let's start with getting to know you. The only required field is 'alias', but for more functionality, you should also fill out the email and the phone-number. Of course you can also do so later. None of this information will be public or go to our servers, unless you explicitly ask us to."
               class="h2" textWrap="true"/>
        <df:RadDataForm id="myDataForm" source="{{ input }}">
            <df:RadaForm.properties>
                <df:EntityProperty name="alias"
                                   displayName="Alias"
                                   hintText="Enter Alias" index="0" labelWidth="60">
                    <df:EntityProperty.editor>
                        <df:PropertyEditor type="Text">
                            <df:PropertyEditor.propertyEditorStyle>
                                <df:PropertyEditorStyle labelPosition="Left" labelWidth="60"
                                                        labelFontStyle="Italic" labelTextColor="#00695c"/>
                            </df:PropertyEditor.propertyEditorStyle>
                        </df:PropertyEditor>
                    </df:EntityProperty.editor>
                </df:EntityProperty>
            </df:RadaForm.properties>
            <df:RadaForm.properties>
                <df:EntityProperty name="email"
                                   displayName="E-Mail"
                                   hintText="Enter your email" index="0" labelWidth="60">
                    <df:EntityProperty.editor>
                        <df:PropertyEditor type="Text">
                            <df:PropertyEditor.propertyEditorStyle>
                                <df:PropertyEditorStyle labelPosition="Left" labelWidth="60"
                                                        labelFontStyle="Italic" labelTextColor="#00695c"/>
                            </df:PropertyEditor.propertyEditorStyle>
                        </df:PropertyEditor>
                    </df:EntityProperty.editor>
                </df:EntityProperty>
            </df:RadaForm.properties>
            <df:RadaForm.properties>
                <df:EntityProperty name="phone"
                                   displayName="Phone-number"
                                   hintText="Enter your telephone number" index="0" labelWidth="60">
                    <df:EntityProperty.editor>
                        <df:PropertyEditor type="Text">
                            <df:PropertyEditor.propertyEditorStyle>
                                <df:PropertyEditorStyle labelPosition="Left" labelWidth="60"
                                                        labelFontStyle="Italic" labelTextColor="#00695c"/>
                            </df:PropertyEditor.propertyEditorStyle>
                        </df:PropertyEditor>
                    </df:EntityProperty.editor>
                </df:EntityProperty>
            </df:RadaForm.properties>
        </df:RadDataForm>

        <Button text="Continue" tap="goNext" class="btn btn-primary btn-active"/>
    </StackLayout>
</Page>
