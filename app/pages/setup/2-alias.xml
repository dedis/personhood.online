<!--
Here the user can enter his alias
-->
<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      navigatingTo="navigatingTo"
      xmlns:df="nativescript-ui-dataform"
      class="page">
    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="Setting Alias"></Label>
    </ActionBar>
    <StackLayout class="p-20">
        <Label text="Setting your alias" class="h1 text-center" textWrap="true"/>
        <Label text="Please enter an alias that will be used whenever you share your identity with somebody else. You can change it afterwards and it does not need to be globally unique."
               class="h2" textWrap="true"/>
        <df:RadDataForm id="myDataForm" source="{{ input }}">
            <df:RadaForm.properties>
                <df:EntityProperty name="alias"
                                   displayName="Alias"
                                   hintText="Enter Alias" index="0" labelWidth="60">
                    <df:EntityProperty.editor>
                        <df:PropertyEditor type="Text">
                            <df:PropertyEditor.propertyEditorStyle>
                                <df:PropertyEditorStyle labelPosition="Left" labelWidth="60"
                                                        labelFontStyle="Italic" labelTextColor="#00695c"/>
                            </df:PropertyEditor.propertyEditorStyle>
                        </df:PropertyEditor>
                    </df:EntityProperty.editor>
                </df:EntityProperty>
            </df:RadaForm.properties>
        </df:RadDataForm>

        <Button text="Continue" tap="goActivate" class="btn btn-primary btn-active"/>
    </StackLayout>
</Page>
