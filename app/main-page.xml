<!--
The TabView component provides a simple way to navigate between different views by
tapping on some of the tabs or by swiping between the views.
Learn more about the TabView component in this documentation article:
http://docs.nativescript.org/cookbook/ui/tab-view
-->
<Page actionBarHidden="true" navigatingTo="navigatingTo">
    <Label text="Loading" class="h1" style="vertical-align: center;"
    visibility="{{ loaded ? 'visible' : 'collapse' }}"/>
    <TabView androidTabsPosition="bottom" androidOffscreenTabLimit="0" selectedIndex="0"
             selectedIndexChanged="onChangeTab" visibility="{{ loaded ? 'collapse' : 'visible' }}">
        <TabViewItem title="Home" ios:iconSource="res://tabIcons/home" android:iconSource="res://home">
            <Frame defaultPage="pages/home/home-page"/>
        </TabViewItem>

        <TabViewItem title="Manage" ios:iconSource="res://tabIcons/browse" android:iconSource="res://browse">
            <Frame defaultPage="pages/manage/manage-page"/>
        </TabViewItem>

        <!--<TabViewItem title="Lab" ios:iconSource="res://tabIcons/home" android:iconSource="res://search">-->
