            <!--&lt;!&ndash;<Frame defaultPage="pages/lab/coupons/coupons-page"></Frame>&ndash;&gt;-->
        <!--</TabViewItem>-->

        <TabViewItem title="Settings" ios:iconSource="res://tabIcons/admin" android:iconSource="res://admin">
            <Frame defaultPage="pages/settings/settings-page"/>
        </TabViewItem>
    </TabView>
</Page>