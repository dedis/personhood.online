<!--
The TabView component provides a simple way to navigate between different views by
tapping on some of the tabs or by swiping between the views.
Learn more about the TabView component in this documentation article:
http://docs.nativescript.org/cookbook/ui/tab-view
-->
<Page actionBarHidden="true" navigatingTo="navigatingTo">
    <TabView androidTabsPosition="bottom" androidOffscreenTabLimit="0" selectedIndex="0" selectedIndexChanged="onChangeTab">
        <TabViewItem title="Home" ios:iconSource="res://tabIcons/search" android:iconSource="res://home">
            <Frame defaultPage="pages/home/home-page"/>
        </TabViewItem>

        <TabViewItem title="Manage" ios:iconSource="res://tabIcons/search" android:iconSource="res://card">
            <Frame defaultPage="pages/manage/manage-page"/>
        </TabViewItem>

        <TabViewItem title="Lab" ios:iconSource="res://tabIcons/home" android:iconSource="res://search">
            <Frame defaultPage="pages/lab/lab-page"/>
            <!--<Frame defaultPage="pages/lab/posts/posts-page"></Frame>-->
            <!--<Frame defaultPage="pages/lab/coins/coins-page"></Frame>-->
            <!--<Frame defaultPage="pages/lab/coupons/coupons-page"></Frame>-->
        </TabViewItem>

        <TabViewItem title="Settings" ios:iconSource="res://tabIcons/admin" android:iconSource="res://admin">
            <Frame defaultPage="pages/settings/settings-page"/>
        </TabViewItem>
    </TabView>
</Page>